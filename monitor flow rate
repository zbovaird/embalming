const int sensorPin = 2;  // Connect the sensor signal to digital pin 2

volatile int pulseCount = 0;
unsigned long startTime = 0;
unsigned long currentTime = 0;
float flowRate = 0.0;

void setup() {
  Serial.begin(9600);
  pinMode(sensorPin, INPUT);
  attachInterrupt(digitalPinToInterrupt(sensorPin), pulseCounter, RISING);
}

void loop() {
  currentTime = millis();
  
  if (currentTime - startTime >= 1000) {  // Update flow rate every 1 second
    detachInterrupt(digitalPinToInterrupt(sensorPin));  // Stop counting pulses temporarily
    flowRate = (pulseCount / 23.0);  // Convert pulses to flow rate (L/min)
    pulseCount = 0;  // Reset pulse count
    attachInterrupt(digitalPinToInterrupt(sensorPin), pulseCounter, RISING);  // Resume counting pulses
    startTime = currentTime;  // Reset the timer
  }

  // Display flow rate in Serial Monitor
  Serial.print("Flow Rate: ");
  Serial.print(flowRate);
  Serial.println(" L/min");
}

void pulseCounter() {
  pulseCount++;
}
